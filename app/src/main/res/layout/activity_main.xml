<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:orientation="vertical">

    <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:layout_gravity="center">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_changed_won_num"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:id="@+id/changed_won_number"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_changed_won_percent"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:id="@+id/changed_won_percent"
                android:layout_below="@+id/changed_won_number"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_not_changed_won_num"
                android:id="@+id/not_changed_won_number"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:layout_below="@+id/changed_won_percent"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_not_changed_won_percent"
                android:id="@+id/not_changed_won_percent"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:layout_below="@+id/not_changed_won_number"/>

    </RelativeLayout>
    <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:layout_gravity="center">
        <Button
                android:text="100"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn_100"
                android:onClick="onClick"/>
        <Button
                android:text="1000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn_1000"
                android:onClick="onClick"/>
        <Button
                android:text="5000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn_5000"
                android:onClick="onClick"/>

        <Button
                android:text="10000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn_10000"
                android:onClick="onClick"/>
    </LinearLayout>


</LinearLayout>